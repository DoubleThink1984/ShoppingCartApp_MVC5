                            <li>@Html.ActionLink("Categories", "Index", "Menus", null, new { @class = "parent" })</li>
                            <li>@Html.ActionLink("Products", "Index", "Products", null, new { @class = "parent" })</li>
                        </ul>
                    </div>
                </li>
                }
        </ul>
    </div>
</div>
