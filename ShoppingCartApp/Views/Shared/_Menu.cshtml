                            @CreateMenu(ModelLists.RootCategories)
                        </ul>
                    </div>
                </li>
                <li>@Html.ActionLink("About", "About", "Home")</li>
                <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                @if (User.IsInRole("Admin"))
            {
                    <li>
                        @Html.ActionLink("Administrator", "Index", "Administrator")
                    <div>
