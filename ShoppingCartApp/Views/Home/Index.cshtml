@model IEnumerable<ShoppingCartApp.Models.Product>

@{
    ViewBag.Title = "Shopping Cart Home Page";
}


    <div class="container" id="carouselPlacement">
        <div class="row">
            <div class="col-md-5">
                <h1 class="jumbotron bold"><span style="color: #f79b34; font-size: 1.5em;">Welcome!</span><br /><br /><span style="color: #44697D"><b>Catch Collectibles</b></span>
                    <br /><small><b>is your premier stop for fine collectibles at discounted prices!</b></small>
                    <small>
                        Here you'll find something for everyone, including
                        <b class="text-success">Comics, Action Figures, Original Art, Coins, and much more!</b>
                    </small>
                </h1>                    
            </div>
            <div class="col-md-7" style="padding-top:20px;">
                
                <div id="myCarousel" class="carousel slide" data-ride="carousel">
                    <!-- Indicators -->
                    <ol class="carousel-indicators">
                        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                        <li data-target="#myCarousel" data-slide-to="1"></li>
                        <li data-target="#myCarousel" data-slide-to="2"></li>
                        <li data-target="#myCarousel" data-slide-to="3"></li>
                    </ol>

                    <!-- Wrapper for slides -->
                    <div class="carousel-inner" role="listbox">
                        @for (int i = 0; i < Model.Count(); i++)
                        {
                            if (i == 0)
                            {
                                <div class="item active">
                                    <a href="@Url.Action("Details", "Product", new { id = Model.ToList()[i].ProductID })">
                                        <img src="@Url.Content(Model.ToList()[i].ProductImages.Where(x => x.Featured == true).Single().Path)" alt="...">
                                        @*<div class="carousel-caption">
                                            <h1 class="carouselCaption">@Model.ToList()[i].ProductName</h1>
                                        </div>*@
                                    </a>
                                </div>
                            }
                            else
                            {
                                <div class="item">
                                    <a href="@Url.Action("Details", "Product", new { id = Model.ToList()[i].ProductID })">
                                        <img src="@Url.Content(Model.ToList()[i].ProductImages.Where(x => x.Featured == true).Single().Path)" alt="...">
                                        @*<div class="carousel-caption">
                                            <h1 class="carouselCaption">@Model.ToList()[i].ProductName</h1>
                                        </div>*@
                                    </a>
                                </div>
                            }
                        }
                    </div>

                    <!-- Left and right controls -->
                    <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev" style="border-radius: 5px;">
                        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
                        <span class="sr-only">Previous</span>
                    </a>
                    <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next" style="border-radius: 5px;">
                        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
                        <span class="sr-only">Next</span>
                    </a>
                </div>

            </div>
        </div>
    </div>






